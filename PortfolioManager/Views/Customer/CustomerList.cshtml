@model IEnumerable<PortfolioManager.Models.Customer>

@{
    ViewBag.Title = "CustomerListView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CustomerListView</h2>

<table style="width:60%">
    <tr>
        <th>Customer Id</th>
        <th>Customer Name</th>
        <th>Portfolio Id</th>
    </tr>
    @foreach (var customer in Model)
    {
        <tr>
            <td>@customer.CustomerId</td>
            <td>@Html.ActionLink(@customer.CustomerName, "CustomerDetails", "Customer", new { id= @customer.CustomerId },null)</td>
            <td>@customer.CustomerPortfolio.PortfolioId</td>
        </tr>
    }
</table>

